extends base.pug

block title 
    title Contact us! 

block script 
    script 
        include ../static/contact.js
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous") 

block style 
    style 
        include ../static/style.css
        include ../static/contactStyle.css
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")

block content 
    div#alert

    h1 We will love to hear from you!
    form(action="/contact", class="myForm")
        label(for="name", name="name", class="label") Name
        input(type="text", name="Name", class="myInput", id="name", placeholder="Enter your Name")
        
        label(for="age", name="age", class="label") Age
        input(type="number", name="Age", class="myInput", id="age", placeholder="Enter your Age")

        label(for="gender", name="gender", class="label") Gender 
        input(type="text", name="Gender", class="myInput", id="gender", placeholder="Enter your Gender")
        
        label(for="phone", name="phone", class="label") Phone No.
        input(type="number", name="Phone", class="myInput", id="phone", placeholder="Enter your Phone Number")
        
        label(for="email", name="email", class="label") Email 
        input(type="email", name="Email", class="myInput", id="email", placeholder="Enter your email")
        
        label(for="Address", name="Address", class="label") Address 
        <textarea name="Address" id="Address" class="myInput" cols="30" rows="10" placeholder="Enter your address..."></textarea>  
        
        label(for="MoreInfo", name="MoreInfo", class="label") More information 
        <textarea name="MoreInfo" id="MoreInfo" class="myInput" cols="30" rows="10" placeholder="Anything you would like to share with us?"></textarea> 
        button(type="submit", id="submit") 
            | Submit  