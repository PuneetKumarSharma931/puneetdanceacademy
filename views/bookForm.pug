
extends base.pug

block title 
    title Book your service! 

block script 
    script 
        include ../static/bookForm.js
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")

block style 
    style 
        include ../static/style.css
        include ../static/contactStyle.css
        include ../static/bookFormStyle.css
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")

block content 
    div#bookAlert
    
    h1 Thank you for choosing us! Please provide your details below
    form(action="/services/book", class="myForm")
        label(for="bookName", name="Name", class="label") Name
        input(type="text", id="bookName", name="Name", class="myInput", placeholder="Enter your Name")

        label(for="bookAge", name="Age", class="label") Age
        input(type="number", id="bookAge", name="Age", class="myInput", placeholder="Enter your Age")

        label(for="bookGender", name="Gender", class="label") Gender 
        input(type="text", id="bookGender", name="Gender", class="myInput", placeholder="Enter your Gender")

        label(for="bookEmail", name="Email", class="label") Email
        input(type="email", id="bookEmail", name="Email", class="myInput", placeholder="Enter your Email id")

        label(for="bookPhone", name="Phone", class="label") Phone No.
        input(type="number", id="bookPhone", name="Phone", class="myInput", placeholder="Enter your Phone No.")

        label(for="Service", class="label") Please Choose a Service from the list
        select(name="Service", id="Service", class="myInput")
            option(value="Dance Classes") Dance Classes 
            option(value="Live Performance") Live Performance 
            option(value="Personal Classes") Personal Classes 
            option(value="Yoga Classes") Yoga Classes 

        button(type="submit", id="bookSubmit")
            | Book 


        